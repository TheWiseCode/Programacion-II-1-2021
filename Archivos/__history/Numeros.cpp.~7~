// ---------------------------------------------------------------------------

#pragma hdrstop

#include "Numeros.h"
// ---------------------------------------------------------------------------
#pragma package(smart_init)

String repetir(Cardinal n, Cardinal v) {
	String r;
	if (n == 0)
		r = "";
	else {
		r = repetir(n - 1, v);
		r += IntToStr(v);
	}
	return r;
}

String literal(Cardinal n) {
	String r;
	if (n < 10)
		r = repetir(n, n);
	else {
		Byte dig = n % 10;
		n = n / 10;
		r = literal(n);
        r += repetir(dig, dig);
	}
	return r;
}
